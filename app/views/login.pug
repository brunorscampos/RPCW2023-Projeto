extends layout

block content
  header
    style.
      #myTable tbody tr:hover {
        cursor: pointer;
      }
      #myTable td {
        font-size: 12px; /* Adjust the font size to your preference */
      }
      .scrollable-text {
        max-height: 150px; /* Set the desired height of the scrollable area */
        overflow: auto; /* Enable scrolling when the content exceeds the height */
      }
    .w3-card-4
      header.w3-container.w3-blue
        .w3-left
          h1 
            i.fa.fa-home.clickable(onclick="window.location='/'" style='cursor:pointer;padding-right:15px;') 
            | Login
  form(action="/login", method="POST" style="padding:15px;width:30%;")
    label(for="username") Username:
    input.w3-input.w3-border(type="text", id="username", name="username")
    br
    label(for="password") Password:
    input.w3-input.w3-border(type="password", id="password", name="password")
    br
    input.w3-btn.w3-blue(type="submit", value="Login")
    p Don't have an account? 
      a(href="/register") Register here.  